<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.MyApp" parent="Base.Theme.MyApp">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/lite_primary</item>
        <item name="colorPrimaryVariant">@color/lite_primary_variant</item>
        <item name="colorSecondary">@color/lite_secondary</item>
        <item name="colorSecondaryVariant">@color/lite_secondary</item>
        <item name="android:colorBackground">@color/blue_gray_900</item>
        <item name="colorSurface">@color/blue_gray_900</item>
        <item name="colorError">@color/red_200</item>
        <item name="colorOnPrimary">@color/black_900</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <item name="colorOnBackground">@color/white_50</item>
        <item name="colorOnSurface">@color/white_50</item>
        <item name="colorOnError">@color/black_900</item>
    </style>
</resources>